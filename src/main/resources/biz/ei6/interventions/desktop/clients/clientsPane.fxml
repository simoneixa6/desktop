<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<fx:root id="splitpanestyle" fx:id="splitPane" minWidth="400.0" type="SplitPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <AnchorPane id="AnchorPane" maxWidth="400.0">
         <children>
            <Label id="title" alignment="TOP_LEFT" contentDisplay="TOP" text="Clients" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0">
               <padding>
                  <Insets right="10.0" />
               </padding>
            </Label>
            <TextField id="textInput" minWidth="40.0" prefHeight="28.0" prefWidth="360.0" promptText="Rechercher" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0" />
            <ListView id="greylistview" fx:id="clientsListView" layoutY="120.0" prefHeight="720.0" prefWidth="360.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="120.0" />
            <FlowPane prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
            <HBox alignment="CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <Button id="bluebtn" fx:id="createBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Nouveau Client" />
               </children>
            </HBox>
         </children>
      </AnchorPane> 
   </items>
</fx:root>
